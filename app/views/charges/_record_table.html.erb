<table class="table <%=records %>">
  <thead>
    <tr>
      <th>Date</th>
      <th>first name</th>
      <th>last name</th>
      <th>amount</th>
      <th>currency</th>
      <th>state</th>
    </tr>
  </thead>
  <tbody>
    <%Transaction.send(records).each do |record| %>
      <tr class=<%=record.state %>>
        <td><%=record.created_at.strftime("%A, %B %d %Y")%></td>
        <td><%=record.customer.first_name%></td>
        <td><%=record.customer.last_name%></td>
        <td><%=number_to_currency(record.amount/100)%></td>
        <td><%=record.currency%></td>
        <td><%=record.state%></td>
      </tr>
    <%end%>
  </tbody>
</table>
